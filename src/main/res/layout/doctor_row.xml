<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="230dp"
    style="@style/MyCardViewStyle"
    android:id="@+id/cDoctorRow">
    <!--app:civ_border_width="2dp"  app:civ_border_color="#FF000000"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctorImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <TextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/doctor"
                android:drawablePadding="10dp"
                android:fontFamily="Avenir"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/syringe"
                android:drawablePadding="8dp"
                android:paddingTop="5dp"
                android:fontFamily="Avenir"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:id="@+id/doctorDepartment"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hospital"
                android:drawablePadding="8dp"
                android:paddingTop="5dp"

                android:paddingBottom="5dp"
                android:singleLine="true"
                android:id="@+id/doctorAffiliation"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>